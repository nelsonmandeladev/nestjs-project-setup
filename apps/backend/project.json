{
    "name": "apps/backend",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "tags": [
        "apps/backend"
    ],
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "tsc --build ./apps/backend/tsconfig.build.json"
            }
        },
        "serve": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "tsc --build ./apps/backend/tsconfig.build.json --watch",
                    "node --enable-source-maps --watch --no-warning ./dist/apps/backend/main.js"
                ]
            },
            "dependsOn": [
                "build"
            ]
        },
        "start": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node ./dist/apps/backend/amin.js"
            },
            "dependsOn": [
                "build"
            ]
        }
    }
}
